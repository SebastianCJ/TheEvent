<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/timelineTitulo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:background="@mipmap/bgsplash">

        <Button
            android:id="@+id/btnDrawerTimeline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="?android:attr/selectableItemBackground"
            android:drawableRight="@mipmap/ic_expand_more_white_18dp"
            android:drawableEnd="@mipmap/ic_expand_more_white_18dp"
            android:text="@string/timeline"
            android:textSize="20sp">

        </Button>

        <Button
            android:id="@+id/btnDrawerTimelineClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="?android:attr/selectableItemBackground"
            android:drawableRight="@mipmap/ic_expand_more_white_18dp"
            android:drawableEnd="@mipmap/ic_expand_more_white_18dp"
            android:text="@string/timeline"
            android:textSize="20sp">
        </Button>

        <ImageView
            android:id="@+id/buscarTimeline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@mipmap/btnbuscar"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:id="@+id/fotoEncabezado"
            app:civ_border="false"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/carb"/>

    </RelativeLayout>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/eventContainerTimeline"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/timelineTitulo"/>

    <android.support.v4.widget.DrawerLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_below="@+id/timelineTitulo"
        android:layout_alignParentLeft="true"
        android:id="@+id/drawer_layout">
    <ListView
        android:id="@+id/drawer"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/transparent" />

</android.support.v4.widget.DrawerLayout>

</RelativeLayout>