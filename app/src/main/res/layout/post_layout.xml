<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:id="@+id/timelineHead">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:id="@+id/imgperfil"
            android:contentDescription="@string/imgevento"
            android:layout_marginLeft="15dp"
            android:gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:civ_border="false"
            android:src="@mipmap/carb"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Juan Zepeda"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:id="@+id/nombrePer"
            android:layout_alignTop="@+id/imgperfil"
            android:layout_alignLeft="@+id/diatxt"
            android:layout_alignStart="@+id/diatxt" />

        <TextView
            android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            android:text="Hace 1 dia"
            android:textSize="13sp"
            android:textColor="@color/silver"
            android:id="@+id/diatxt"
            android:layout_below="@+id/nombrePer"
            android:layout_toRightOf="@+id/imgperfil"
            android:layout_toEndOf="@+id/imgperfil"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/desclayout"
        android:layout_below="@+id/timelineHead"
        android:background="@color/white">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Que onda! Los esperamos para la boda!!! Ya tenemos casi todo listo, solo falta que confirmen todos su asistencia para este maravilloso dia... saludos!!!"
            android:textColor="@color/gray2"
            android:layout_marginTop="10dp"
            android:id="@+id/mensajeTime"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="14sp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="182 Comentarios"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/silver"
            android:id="@+id/numComentarios"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/mensajeTime"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="25dp"/>


        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:id="@+id/foto1"
            android:layout_marginLeft="15dp"
            app:civ_border="false"
            android:layout_below="@id/mensajeTime"
            android:src="@mipmap/carb"
            android:layout_marginRight="5dp"/>

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:id="@+id/foto2"
            android:layout_toRightOf="@id/foto1"
            android:layout_below="@id/mensajeTime"
            app:civ_border="false"
            android:src="@mipmap/carb"
            android:layout_marginRight="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/burbuja"
            android:background="@drawable/bubble"
            android:paddingTop="1dp"
            android:paddingLeft="2dp"
            android:paddingBottom="3dp"
            android:text=" +20    "
            android:textSize="12sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@+id/txt"
            android:layout_toRightOf="@+id/foto2"
            android:layout_toEndOf="@+id/foto2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="les gusta esto"
            android:textSize="12sp"
            android:textColor="@color/silver"
            android:id="@+id/txt"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/burbuja"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/mensajeTime" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@color/silver"
            android:layout_below="@id/numComentarios"/>
    </RelativeLayout>



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:baselineAligned="false"
        android:gravity="center"
        android:id="@+id/btnlayout"
        android:layout_below="@id/desclayout">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/megustalayout"
            android:gravity="center" >

            <ImageView
                android:id="@+id/btnmegusta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:src="@mipmap/btnmegusta" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:id="@+id/vertical1"
            android:background="@color/silver" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/comentariolayout"
            android:gravity="center" >

            <ImageView
                android:id="@+id/btncomentario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:src="@mipmap/btncomentario" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:id="@+id/vertical2"
            android:background="@color/silver" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/rutalayout">

            <ImageView
                android:id="@+id/btnruta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:src="@mipmap/btnruta" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/vertblack"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_more_vert_black_48dp"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/btnlayout"
        android:layout_centerHorizontal="true" />

</RelativeLayout>